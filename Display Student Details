
//instance variables default values
//int 0,float 0.0,double 0.0 char
package com.edu;

import java.util.Scanner;

class Student{
	String name;//null
	int age;//0
	//public String collegename;
	//static variable,class variable
	static String collegename="Sharad Institute of Technology college of engg";
	
	void inputStudentData() {
		Scanner scanner=new Scanner(System.in);
		System.out.println("enter the name");
		//name=scanner.next();//string single word
		name=scanner.nextLine();//with space more than one word
		
		System.out.println("enter age");
		age=scanner.nextInt(); //int datatype

	}
	void displayStudentData() {
		System.out.println("Name"+name);
		System.out.println("Age"+age);
		System.out.println("College Name"+collegename);
	}
}

public class StudentMainApp {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Student student1=new Student();
		
		student1.inputStudentData();
		Student student2=new Student();
		student2.inputStudentData();
		String n;//local variables
		
		
		
		System.out.println("Name="+student1.name);//null
		System.out.println("Age="+student1.age);//0
		System.out.println("Coolege name="+student1.collegename);
		System.out.println("Coolege name="+student1.collegename);
		
		//System.out.println("n="+n);//local variables need to intialize


	}

}
